version: 2

build:
  os: ubuntu-24.04
  tools:
    python: "3.13"
  jobs:
    pre_create_environment:
      # Install uv via asdf (or system package) before creating the venv
      - asdf plugin add uv || true
      - asdf install uv latest
      - asdf global uv latest
    create_environment:
      # Create the virtual environment using uv
      - uv venv "${READTHEDOCS_VIRTUALENV_PATH}"
    install:
      # Sync doc-dependencies (the group “docs”), then install the project itself
      - UV_PROJECT_ENVIRONMENT="${READTHEDOCS_VIRTUALENV_PATH}" uv sync --group docs{% if include_examples %}
    post_install:
      # Export marimo examples to HTML before building docs
      - UV_PROJECT_ENVIRONMENT="${READTHEDOCS_VIRTUALENV_PATH}" uv run python scripts/export_marimo_examples.py
{% endif %}
    build:
      # Manually build docs so we can run post-processing
      - UV_PROJECT_ENVIRONMENT="${READTHEDOCS_VIRTUALENV_PATH}" uv run mkdocs build --clean
      # Copy markdown files for LLM/AI consumption
      - UV_PROJECT_ENVIRONMENT="${READTHEDOCS_VIRTUALENV_PATH}" uv run python scripts/copy_markdown_docs.py

site_dir: site
